pipeline{



    agent any




    stages{
        stage('checkout'){
            steps{
                git 'https://github.com/saigopinath8466'
            }
        }
        stage('build'){
            steps{
                sh "mvn clean install -DskipTests"
            }
        }
        stage ('test'){
            steps{
                sh "mvn test"
                junit allowEmptyResults: true, testResults: 'target/surefire-reports/*.xml'
            }
        }
        stage('test'){
            steps{
            echo "testing passed"
            }
        }
        stage('postbuild tasks'){
            steps{
                echo "sended email"
            }
        }
        stage('approval'){
            steps{
                input 'waiting for your approval'
             }
        }
        stage('deployment stage'){
                steps{
                    echo  "deployed to prod"
                }
        }
     }
    
}
